
PATH="/usr/sbin:/usr/bin:/sbin:/bin"

EDITOR="vi"
TERM="vt100"
[ -z "$PS1" ] || PS1='\u@\h:\w\$ '

if [ -d /etc/profile.d ]; then
	for i in /etc/profile.d/*.sh; do
		if [ -f $i -a -r $i ]; then
			. $i
		fi
	done
	unset i
fi

case $(tty 2>/dev/null) in
	/dev/tty[A-z]*) [ -x @BINDIR@/resize ] && @BINDIR@/resize >/dev/null;;
esac

export PATH EDITOR TERM PS1

umask 022
